PORT=8787
LOG_LEVEL=info

# PostgreSQL
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/cloud_mail
PG_SSL=false

# Redis
REDIS_URL=redis://127.0.0.1:6379/0

# Core
DOMAIN=["example.com"]
ADMIN=admin@example.com
JWT_SECRET=change-me
ORM_LOG=false

# Inbound email relay secret (must match cloud-mail-receive-worker)
INBOUND_SHARED_SECRET=change-me
INBOUND_MAX_SKEW_SECONDS=300

# SMTP inbound (0 Cloudflare mode)
SMTP_ENABLED=true
SMTP_HOST=0.0.0.0
SMTP_PORT=25
SMTP_MAX_SIZE=26214400
# Optional SMTP AUTH for trusted relay clients
SMTP_REQUIRE_AUTH=false
SMTP_AUTH_USER=
SMTP_AUTH_PASS=
SMTP_ENABLE_STARTTLS=false
SMTP_TLS_KEY_PATH=
SMTP_TLS_CERT_PATH=

# Optional LinuxDo OAuth
LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_CALLBACK_URL=
LINUXDO_SWITCH=false

# Optional scheduler
ENABLE_CRON=true
CRON_EXPR=0 0 * * *

# Optional auto bootstrap at startup
AUTO_INIT=false
