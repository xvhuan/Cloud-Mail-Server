TZ=Asia/Shanghai

# Host exposed ports (only these two)
SMTP_BIND_PORT=25
API_BIND_PORT=8787

# Mail domains and admin account
DOMAIN=["example.com","example.net"]
ADMIN=admin@example.com
JWT_SECRET=change-me-very-long-random-string
ORM_LOG=false

# PostgreSQL / Redis in Docker network
POSTGRES_DB=cloud_mail
POSTGRES_USER=cloud_mail
POSTGRES_PASSWORD=change-postgres-password
DATABASE_URL=postgres://cloud_mail:change-postgres-password@postgres:5432/cloud_mail
PG_SSL=false
REDIS_URL=redis://redis:6379/0

# Scheduler
ENABLE_CRON=true
CRON_EXPR=0 0 * * *
CRON_TIMEZONE=Asia/Shanghai

# Internal inbound API signature (optional but recommended)
INBOUND_SHARED_SECRET=change-inbound-secret
INBOUND_MAX_SKEW_SECONDS=300

# Optional OAuth
LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_CALLBACK_URL=
LINUXDO_SWITCH=false

# MinIO / S3
S3_BUCKET=cloud-mail
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-minio-password

# SMTP server options
SMTP_REQUIRE_AUTH=false
SMTP_AUTH_USER=
SMTP_AUTH_PASS=
SMTP_ENABLE_STARTTLS=false
SMTP_TLS_KEY_PATH=
SMTP_TLS_CERT_PATH=
SMTP_MAX_SIZE=26214400
